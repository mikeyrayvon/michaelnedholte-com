@import "sanitize"
@import "helpers"
@import "fonts"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
.container
  margin: 0 auto
  width: 1100px

// VARIABLES

$gutter = 8px
$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*4)

$font-size-basic = 18px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

// TYPOGRAPHY

$font-ag-lRg = 'akzidenz-grotesk_bq_lightRg','Helvetica Neue',helvetica,arial,sans-serif
$font-miller-Rg = 'miller_textregular',georgia,times,serif

body
  font-family: $font-miller-Rg
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 1em
  font-weight: normal

h2
  font-size: 1.3em
  font-family: $font-ag-lRg
  font-weight: normal

h3
  font-size: 1em
  font-weight: normal

p
  margin-bottom: 1em
  font-family: $font-miller-Rg


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    color: blue


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto


//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header
  position: fixed
  width: 100%
  height: auto
  top: 0
  left: 0
  border-bottom: 1px solid $color-black-soft 
  padding: $margin-basic
  background-color: $color-white-soft
  font-size: 1.5em
  line-height: 1.2em
  overflow: hidden
  
#site-title
  display: inline-block
  -webkit-backface-visibility: hidden 
    
#breadcrumbs
  display: inline-block
  
.menu
  display: block 

.menu-item
  display: inline-block
  cursor: pointer
  opacity: 1
  transition: opacity 1s
    
.first-level .menu-item:after
  content: '\00a0 ,\00a0'
.second-level .menu-item:after
  content: '\00a0 /\00a0'
.third-level .menu-item:after
  content: '\00a0 ~\00a0'
  
.first-level, .second-level, .third-level
  .menu-item:last-child:after
    content: ''

.nav-hide
  display: none
  opacity: 0
  
.nav-selected
  color: blue
  
#site-title, .menu
  padding-bottom: $margin-small
  

// POSTS LOOP
#main-content
  padding: $margin-large 0 $margin-large*4
  width: 90%
  max-width: 1200px
  display: block
  margin-left: auto
  margin-right: auto 
  
.archive
  .post
    width: 100%
    a
      display: block
    h2, span 
      display: inline-block
      font-size: 1.3em
      font-family: $font-ag-lRg
    span
      float: right
      text-align: right
    

.post 
  width: 600px
  margin: 0 auto   
  padding: $margin-large 0 $margin-basic
  border-bottom: 1px solid $color-black-soft
  display: block
  h1
    font-size: 1.5em
    line-height: 1.3em
    margin-bottom: 2em
  .date
    display: block
    margin-bottom: 1em
    padding-bottom: 1em
    border-bottom: 1px solid $color-black-soft
  


#pagination
  width: 100%
  
#result
  position: fixed
  display: block
  z-index: 9999
  left: 50%
  margin-left: -300px
  top: 20px
  width: 600px
  border: 1px solid $color-black-soft
  background-color: $color-white-soft


// FOOTER

#footer
  width: 100%


